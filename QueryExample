List<Opportunity> assign = [ SELECT Id, Name, CloseDate FROM Opportunity ORDER BY CloseDate DESC ];
System.debug(assign);

for( Opportunity a : assign ){
    System.debug(a.Id + '/' +a.CloseDate );
}

AggregateResult[] results = [ SELECT MAX(CloseDate)clsDate FROM Opportunity GROUP BY Account.Id ];
for ( integer i = 0; i < results.size(); i++){

System.debug('CloseDate is ' + results[i].get('clsDate'));
}
