List<Opportunity> assign = [ SELECT Id, Name, CloseDate FROM Opportunity ORDER BY CloseDate DESC ];
System.debug(assign);

for( Opportunity a : assign ){
    System.debug(a.Id + '/' +a.CloseDate );
}

AggregateResult[] results = [ SELECT Id, Name, MAX(CloseDate)clsDate FROM Opportunity GROUP BY Id, Name ];
for ( int i = 0; i < results.length(); i++){

System.debug('Name is ' + results[i].get('Name') + ' /  CloseDate is ' + results[i].get('clsDate'));
}
